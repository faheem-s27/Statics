<resources>
    <!-- Base application theme. -->
    <style name="Theme.VALORANT_stats" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ic_launcher_background</item>
        <item name="colorPrimaryVariant">@color/ic_launcher_background</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowContentTransitions">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ToolBar</item>
        <item name="android:navigationBarColor">@color/ToolBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/ic_launcher_background</item>
    </style>

    <style name="Theme.VALORANT_stats.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VALORANT_stats.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VALORANT_stats.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.VALORANT_stats.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">24dp</item>
        <item name="appWidgetInnerRadius">16dp</item>
    </style>

    <style name="Theme.VALORANT_stats.AppWidgetContainer" parent="Theme.VALORANT_stats.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
    </style>

    <style name="Theme.App.About" parent="Theme.AppCompat">
        <item name="aboutStyle">@style/about_About</item>
        <item name="android:background">@color/ic_launcher_background</item>
    </style>

</resources>
