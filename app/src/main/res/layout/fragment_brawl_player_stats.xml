<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".brawlhalla.brawl_playerStats">

    <TextView
        android:id="@+id/brawlName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Stats for PinchedRainbow"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/brawlProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:foregroundGravity="center"
        android:padding="10dp"
        android:progress="50"
        android:progressTint="#2962FF"
        android:progressTintMode="src_in"
        android:scrollIndicators="none"
        android:secondaryProgressTintMode="add"
        app:circularflow_angles="50.0"
        app:circularflow_defaultAngle="50.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brawlName" />

    <TextView
        android:id="@+id/brawlLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Level 70"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/brawlProgress"
        app:layout_constraintTop_toBottomOf="@+id/brawlProgress" />

    <TextView
        android:id="@+id/brawlXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="XP: 34556"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/brawlProgress"
        app:layout_constraintTop_toBottomOf="@+id/brawlProgress" />

    <TextView
        android:id="@+id/brawlGames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 4389"
        android:textColor="#FFFDFD"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brawlLevel" />

    <TextView
        android:id="@+id/brawlWins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wins: 2354"
        android:textColor="#00B8D4"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/brawlGames"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/brawlGames" />

    <TextView
        android:id="@+id/brawlLosses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Wins: 2354"
        android:textColor="#D50000"
        android:textSize="16dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/brawlGames"
        app:layout_constraintTop_toTopOf="@+id/brawlGames" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brawlGames" />

    <TextView
        android:id="@+id/brawlLegendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Most played Legend: Diana"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />
</androidx.constraintlayout.widget.ConstraintLayout>
