<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/circley_PFP"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:elevation="12dp"
        android:translationZ="30dp"
        app:cardCornerRadius="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/translater_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/newpfp" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/translater_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/circley_PFP"
        app:layout_constraintStart_toStartOf="@+id/circley_PFP"
        app:layout_constraintTop_toBottomOf="@+id/circley_PFP"
        tools:text="Faheem Saleem" />

    <TextView
        android:id="@+id/translater_discord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/circley_PFP"
        app:layout_constraintStart_toStartOf="@+id/circley_PFP"
        app:layout_constraintTop_toBottomOf="@+id/translater_name"
        tools:text="Duck#2004" />

    <TextView
        android:id="@+id/translater_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/circley_PFP"
        app:layout_constraintStart_toStartOf="@+id/circley_PFP"
        app:layout_constraintTop_toBottomOf="@+id/translater_discord"
        tools:text="English" />
</androidx.constraintlayout.widget.ConstraintLayout>