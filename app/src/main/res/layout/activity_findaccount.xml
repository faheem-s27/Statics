<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".valorant.PlayerMainMenu">

        <ImageView
            android:id="@+id/imagebackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.2"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:elevation="12dp"
            app:cardCornerRadius="200dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/playerProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@drawable/valologo"
                app:srcCompat="@drawable/agentesicon" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/playerLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:background="@color/ic_launcher_background"
            android:elevation="100dp"
            android:fontFamily="@font/baloo_bhai"
            android:padding="5dp"
            android:text="null"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="@+id/circle"
            app:layout_constraintEnd_toEndOf="@+id/circle"
            app:layout_constraintStart_toStartOf="@+id/circle"
            app:layout_constraintTop_toBottomOf="@+id/circle" />

        <View
            android:id="@+id/view2"
            style="@style/Divider.Horizontal"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rankNumberMainMenu" />

        <TextView
            android:id="@+id/playerNameMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="Name#1234"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/circle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circle"
            app:layout_constraintTop_toTopOf="@+id/circle"
            tools:text="SprinkledRainbow#1593" />

        <Button
            android:id="@+id/RSOLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#eb0029"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Sign out"
            android:textColor="#FFFFFF"
            app:cornerRadius="150dp"
            app:icon="@drawable/just_statics"
            app:iconSize="25dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="#FFFFFF" />

        <TextView
            android:id="@+id/rankPatchedMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Getting rank..."
            android:textSize="18dp"
            app:layout_constraintStart_toEndOf="@+id/rankImageMainMenu"
            app:layout_constraintTop_toTopOf="@+id/rankImageMainMenu" />

        <ProgressBar
            android:id="@+id/rankProgressMainMenu"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="24"
            android:progressTint="#EB0029"
            android:visibility="invisible"
            app:layout_constraintEnd_toStartOf="@+id/MMRFAB"
            app:layout_constraintStart_toEndOf="@+id/rankImageMainMenu"
            app:layout_constraintTop_toBottomOf="@+id/rankPatchedMainMenu"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/rankNumberMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:text="24/100"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="@+id/rankProgressMainMenu"
            app:layout_constraintTop_toBottomOf="@+id/rankProgressMainMenu"
            tools:visibility="visible" />

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="LeaderBoard"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            app:cornerRadius="150dp"
            app:icon="@drawable/stats_icon"
            app:iconSize="25dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecentMatchFAB"
            app:strokeColor="#FFFFFF" />

        <Button
            android:id="@+id/updateBT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:fontFamily="@font/baloo_bhai"
            android:gravity="center"
            android:text="Updates"
            android:textColor="#FFFFFF"
            android:visibility="invisible"
            app:cornerRadius="150dp"
            app:icon="@drawable/update"
            app:iconSize="25dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/leaderboard"
            app:layout_constraintStart_toStartOf="@+id/leaderboard"
            app:layout_constraintTop_toBottomOf="@+id/leaderboard"
            app:strokeColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Current Ranking"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="Last Match Details"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <ImageView
            android:id="@+id/lastMatchMapImage"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_marginTop="8dp"
            android:alpha="0.4"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerLevel" />

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecentMatchFAB" />

        <ImageView
            android:id="@+id/rankImageMainMenu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:srcCompat="@tools:sample/avatars"
            tools:visibility="visible" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/MMRFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:clickable="true"
            android:foregroundGravity="center"
            app:backgroundTint="@color/ic_launcher_background"
            app:fabSize="auto"
            app:layout_constraintBottom_toBottomOf="@+id/rankNumberMainMenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/rankicon"
            app:tint="@color/white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/RecentMatchFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="#C8111822"
            android:clickable="true"
            android:foregroundGravity="center"
            android:visibility="visible"
            app:backgroundTint="@color/ic_launcher_background"
            app:fabSize="auto"
            app:layout_constraintStart_toStartOf="@+id/lastMatchMapImage"
            app:layout_constraintTop_toBottomOf="@+id/lastMatchMapImage"
            app:srcCompat="@drawable/recentmatchesicon"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/agentImageMainMenu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/lastMatchMapImage"
            app:layout_constraintEnd_toStartOf="@+id/lastMatchStatsMainMenu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:srcCompat="@tools:sample/avatars"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/gameStartMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/baloo_bhai"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/lastMatchMapImage"
            app:layout_constraintEnd_toEndOf="@+id/lastMatchMapImage"
            tools:text="4 hours ago" />

        <TextView
            android:id="@+id/gameModeMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/baloo_bhai"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@+id/lastMatchMapImage"
            app:layout_constraintTop_toTopOf="@+id/lastMatchMapImage"
            tools:text="Custom game" />

        <TextView
            android:id="@+id/lastMatchStatsMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/lastMatchMapImage"
            app:layout_constraintEnd_toEndOf="@+id/lastMatchMapImage"
            app:layout_constraintStart_toStartOf="@+id/lastMatchMapImage"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            tools:text="25/18/5" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/baloo_bhai"
            android:text="👈️ See previous matches!"
            app:layout_constraintBottom_toBottomOf="@+id/RecentMatchFAB"
            app:layout_constraintStart_toEndOf="@+id/RecentMatchFAB"
            app:layout_constraintTop_toTopOf="@+id/RecentMatchFAB" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
