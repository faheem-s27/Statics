<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".FindAccount">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/ic_launcher_background"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Find Username" />

        <ImageView
            android:id="@+id/imagebackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <EditText
            android:id="@+id/editTextValorantName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/purple_500"
            android:ems="10"
            android:fitsSystemWindows="true"
            android:foregroundGravity="center"
            android:gravity="center"
            android:hapticFeedbackEnabled="true"
            android:hint="Enter Riot Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <Button
            android:id="@+id/addname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Add name"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp"
            app:icon="@drawable/add_button"
            app:iconGravity="start"
            app:iconSize="30dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toStartOf="@+id/delete"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextValorantName" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="Delete names"
            android:textColor="#FFFFFF"
            app:cornerRadius="15dp"
            app:icon="@drawable/deleteicon"
            app:iconGravity="textEnd"
            app:iconSize="30dp"
            app:iconTint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextValorantName" />

        <View
            android:id="@+id/view2"
            style="@style/Divider.Horizontal"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:foregroundGravity="center"
            android:pointerIcon="hand"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/delete" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/updateBT"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Updates"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="150dp"
                    app:icon="@drawable/update"
                    app:iconSize="25dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/splitscreenButton"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/splitscreenButton"
                    app:layout_constraintTop_toBottomOf="@+id/compareBT"
                    app:strokeColor="#FFFFFF" />

                <Button
                    android:id="@+id/compareBT"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Compare"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="150dp"
                    app:icon="@drawable/compare"
                    app:iconSize="25dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/splitscreenButton"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/splitscreenButton"
                    app:layout_constraintTop_toBottomOf="@+id/splitscreenButton"
                    app:strokeColor="#FFFFFF" />

                <Button
                    android:id="@+id/matchHistory"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Match History"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/matchhistory"
                    app:iconSize="30dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/generalStats"
                    app:layout_constraintStart_toStartOf="@+id/generalStats"
                    app:layout_constraintTop_toBottomOf="@+id/generalStats" />

                <Button
                    android:id="@+id/splitscreenButton"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:text="Split screen "
                    android:textColor="#FFFFFF"
                    app:cornerRadius="150dp"
                    app:icon="@drawable/splitscreen"
                    app:iconSize="25dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="@+id/generalStats"
                    app:layout_constraintStart_toStartOf="@+id/matchHistory"
                    app:layout_constraintTop_toBottomOf="@+id/matchHistory"
                    app:strokeColor="#FFFFFF" />

                <Button
                    android:id="@+id/generalStats"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:text="Player Stats"
                    android:textColor="#FFFFFF"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/searchicon"
                    app:iconSize="30dp"
                    app:iconTint="#FFFFFF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2">

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>