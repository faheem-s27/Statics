    <Button
        android:id="@+id/popup_LogOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#d32f2f"
        android:fontFamily="@font/lalezar_reg"
        android:gravity="center"
        android:text="@string/s92"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16dp"
        android:textStyle="bold"
        app:cornerRadius="10dp"
        app:icon="@drawable/icons8_riot_games_48"
        app:iconPadding="0dp"
        app:iconSize="32dp"
        app:iconTint="#00FFFFFF"
        app:iconTintMode="add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/new_Leaderboards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/Valorant_Red"
        android:fontFamily="@font/lalezar_reg"
        android:gravity="center"
        android:text="@string/s94"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="33px"
        app:icon="@drawable/rankicon"
        app:iconSize="36dp"
        app:iconTint="@color/light_blue_50"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider9" />

    <Button
        android:id="@+id/new_About"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Valorant_Red"
        android:fontFamily="@font/lalezar_reg"
        android:gravity="center"
        android:text="@string/s96"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:cornerRadius="33px"
        app:icon="@drawable/just_statics_alot_smaller"
        app:iconSize="36dp"
        app:iconTint="@color/light_blue_50"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toEndOf="@+id/new_Leaderboards"
        app:layout_constraintStart_toStartOf="@+id/new_Leaderboards"
        app:layout_constraintTop_toBottomOf="@+id/new_Leaderboards" />

    <Button
        android:id="@+id/popup_donate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/Valorant_Red"
        android:fontFamily="@font/lalezar_reg"
        android:gravity="center"
        android:text="@string/s97"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:cornerRadius="33px"
        app:icon="@drawable/donate"
        app:iconSize="36dp"
        app:iconTint="@color/light_blue_50"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toEndOf="@+id/new_Leaderboards"
        app:layout_constraintStart_toStartOf="@+id/new_Leaderboards"
        app:layout_constraintTop_toBottomOf="@+id/new_About" />

    <Button
        android:id="@+id/pfp_reset_language"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/Valorant_Red"
        android:fontFamily="@font/lalezar_reg"
        android:gravity="center"
        android:text="Reset language"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:cornerRadius="33px"
        app:icon="@drawable/common_full_open_on_phone"
        app:iconSize="36dp"
        app:iconTint="@color/light_blue_50"
        app:iconTintMode="src_in"
        app:layout_constraintEnd_toEndOf="@+id/new_Leaderboards"
        app:layout_constraintStart_toStartOf="@+id/new_Leaderboards"
        app:layout_constraintTop_toBottomOf="@+id/popup_donate" />

    <View
        android:id="@+id/divider9"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:background="@color/Valorant_SplashColourBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_LogOutButton" />

    <!-- A drop down menu under divider9 called language selector -->

</androidx.constraintlayout.widget.ConstraintLayout>
